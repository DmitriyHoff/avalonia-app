<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="AvaloniaApplication1"
		Width="640"
		Height="480"
		MinHeight="480"
		MinWidth="640"
		CanResize="True">

	<DockPanel>
		<Rectangle Fill="Green" Height="32" DockPanel.Dock="Bottom"/>
		<TabControl Margin="0" DockPanel.Dock="Top">
			<TabItem Header="Tab 1">
				<DockPanel>
					<Rectangle Fill="Orange" Width="200" DockPanel.Dock="Right"/>
					<StackPanel>
						<TextBlock Margin="5">This is tab 1 content</TextBlock>
						<Rectangle Fill="GreenYellow" Height="100"/>
						<Rectangle Fill="YellowGreen" Height="100"/>
						<Button Content="login" Margin="8" Background="BlanchedAlmond" Click="LoginButton_Click"/>
					</StackPanel>
					
				</DockPanel>
				
			</TabItem>
			<TabItem Header="Tab 2">
				<TextBlock Margin="5">This is tab 2 content</TextBlock>
			</TabItem>
			<TabItem Header="Tab 3">
				<TextBlock Margin="5">This is tab 3 content</TextBlock>
			</TabItem>
		</TabControl>
	</DockPanel>
	

	
</Window>
